#include <dt-bindings/zmk/matrix-transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &chofu_transform;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-charlieplex";
        label = "KSCAN";

        // 使う4本のGPIOピン（XIAOのラベルで指定）
        gpios = <&gpio0 13 GPIO_ACTIVE_HIGH>,  // D2 = P0.13
                <&gpio0 14 GPIO_ACTIVE_HIGH>,  // D3 = P0.14
                <&gpio0 15 GPIO_ACTIVE_HIGH>,  // D4 = P0.15
                <&gpio0 16 GPIO_ACTIVE_HIGH>;  // D5 = P0.16

        // 低消費電力対応のためinterrupt-gpiosを追加（任意の未使用ピン、例: D1）
        // コメントアウトすれば最大12キー可能だが消費電力が増える
        interrupt-gpios = <&gpio0 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;  // D1 = P0.11
    };

    chofu_transform: matrix_transform {
        compatible = "zmk,matrix-transform";
        rows = <3>;
        columns = <3>;

        // 3x3の物理レイアウトに合わせたマッピング例
        // Charlieplexのアドレス可能位置から9つを選ぶ（対角線は使えない）
        // 例: (driven, sensed) のペアをキー位置に割り当て
        map = <
            RC(0,1) RC(0,2) RC(0,3)
            RC(1,0) RC(1,2) RC(1,3)
            RC(2,0) RC(2,1) RC(2,3)
        >;
    };
};
